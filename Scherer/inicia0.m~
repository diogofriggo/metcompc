function inicia0(X, Y, l, N, dt, tmax, T)
    S = X*Y;        %88 = 11*8
    a = sqrt(S/N);  %sqrt(88/10) = 2.9665
    Nx = ceil(X/a); %11/2.9665 = 3.708 ~ 4
    Ny = ceil(Y/a); %8/2.9665 = 2.697 ~ 3
    a = min(X/Nx,Y/Ny); %min(11/4,8/3) = min(2.75,2.67) = 2.67
    x = zeros(1,N);
    y = zeros(1,N);
    (1:N-1)/Nx
    for n=1:N
        z = (n-1)/Nx; %{0., 0.25, 0.5, 0.75, 1., 1.25, 1.5, 1.75, 2., 2.25}
        x(n) = a*(Nx*(z-floor(z))+.5); % 1.48324, 4.44972, 7.4162, 10.3827, 1.48324, 4.44972, 7.4162, 10.3827, 1.48324, 4.44972
        y(n) = a*(ceil(n/Nx)-.5); %1.48324, 1.48324, 1.48324, 1.48324, 4.44972, 4.44972, 4.44972, 4.44972, 7.4162, 7.4162
    end
    x
    y
    vx = sqrt(T)*randn(1,N);
    vy = sqrt(T)*randn(1,N);
end
